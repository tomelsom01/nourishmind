<h1>Yoga Classes</h1>

<%= link_to 'New Yoga Class', new_admin_yoga_class_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @yoga_classes.each do |yoga_class| %>
      <tr>
        <td><%= yoga_class.name %></td>
        <td><%= yoga_class.description %></td>
        <td><%= yoga_class.date %></td>
        <td><%= yoga_class.location %></td>
        <td><%= link_to 'Show', admin_yoga_class_path(yoga_class) %></td>
        <td><%= link_to 'Edit', edit_admin_yoga_class_path(yoga_class) %></td>
        <td><%= link_to 'Destroy', admin_yoga_class_path(yoga_class), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
