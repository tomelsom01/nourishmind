<div class="container mt-5 mb-5">
  <h1>Yoga Classes Overview</h1>
</div>
<div class="container">
  <% @yoga_classes.each do |yoga_class| %>
    <div>
      <h2><%= yoga_class.title %></h2>
      <p><%= yoga_class.description %></p>
      <p>Start Time: <%= yoga_class.start_time.strftime("%Y-%m-%d %H:%M") %></p>
      <p>End Time: <%= yoga_class.end_time.strftime("%Y-%m-%d %H:%M") %></p>
      <p>Participants: <%= yoga_class.users.count %></p>
      <ul>
        <% yoga_class.users.each do |user| %>
          <li>
            <%= user.name %> (<%= user.email %>)
            <% if admin_signed_in? %>
              <%= link_to 'Edit', edit_admin_yoga_class_user_path(yoga_class, user), class: "btn btn-warning btn-sm" %>
              <%= link_to 'Delete', admin_yoga_class_user_path(yoga_class, user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
